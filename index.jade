                |   string = ''.join([('000'+bin(keyString.index(char))[2:])[-6:] for char in string ])
                |   # convert each binary block into its respective character code
                |   return ''.join([chr(int(string[i:i+8], 2)) for i in range(0, len(string), 8)])

